# Flake8 Configuration
# =====================
# Linting rules for Python code quality

[flake8]
# Maximum line length
max-line-length = 127

# Maximum cyclomatic complexity
max-complexity = 10

# Error codes to ignore
# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with PEP 8)
# E501: line too long (handled by black)
ignore = E203, W503

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    data,
    logs

# Files to check
include = *.py

# Show source code for each error
show-source = True

# Show error codes in output
show-pep8 = True

# Count errors
count = True

# Statistics
statistics = True
